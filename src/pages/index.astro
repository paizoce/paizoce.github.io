---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Paizo | Home">
  <Header />

  <header id="hero">
    <div id="hero-content">
      <p id="hero-welcome">Welcome to</p>
      <h1 id="hero-title">Paizo</h1>
      <p id="hero-slogan"><b>Music That Connects Communities</b></p>
    </div>
  </header>

  <section class="about-section" id="about">
    <h2 style="font-weight: bold;">About Us</h2>
    <p>
      The Paizo Chamber Ensemble is a student-led music community, dedicated to
      performing and promoting chamber music. In addition to performances, Paizo
      members tutor younger musicians, helping them improve their skills and
      confidence. Through collaboration, mentorship, and artistry, Paizo
      inspires audiences and nurtures a lasting love for classical music within
      the community.
    </p>
    <div class="features">
      <div class="feature">
        <i class="fas fa-music"></i>
        <h3 style="font-weight: bold;">Free Performances</h3>
        <p>Live music to brighten your event.</p>
      </div>
      <div class="feature">
        <i class="fas fa-graduation-cap"></i>
        <h3 style="font-weight: bold;">Free Tutoring</h3>
        <p>One-on-one lessons, tailored to your needs.</p>
      </div>
      <div class="feature">
        <i class="fab fa-youtube"></i>
        <h3 style="font-weight: bold;">Watch Us</h3>
        <p>
          Enjoy our covers and concerts on our <a
            href="https://www.youtube.com/@PaizoCE"
            target="_blank"
            style="color: var(--accent-color); text-decoration: underline;"
            >YouTube channel</a
          >.
        </p>
      </div>
      <div class="feature" id="ytplayer1">
        <i class="fa-solid fa-compact-disc"></i>
        <h3 style="font-weight: bold;">Take a listen!</h3>
        <iframe
          src="https://www.youtube.com/embed/P63iPJwI7ZM"
          width="700"
          height="400"></iframe>
      </div>
    </div>
  </section>

  <section class="gallery">
    <h2 style="font-weight: bold;">Our Performances</h2>
    <div class="gallery-container">
      <button class="scroll-btn left" onclick="scrollGallery(-1)">
        <i class="fas fa-chevron-left"></i>
      </button>

      <div class="gallery-track" id="gallery-track">
        <img
          src="/images/performances/first_performance.png"
          alt="Performance 1"
        />
        <img
          src="/images/performances/stonemere_holiday.png"
          alt="Performance 2"
        />
        <img src="/images/performances/parkview.png" alt="Performance 3" />
        <img
          src="/images/performances/first_performance.png"
          alt="Performance 1"
        />
        <img
          src="/images/performances/stonemere_holiday.png"
          alt="Performance 2"
        />
        <img src="/images/performances/parkview.png" alt="Performance 3" />
      </div>

      <button class="scroll-btn right" onclick="scrollGallery(1)">
        <i class="fas fa-chevron-right"></i>
