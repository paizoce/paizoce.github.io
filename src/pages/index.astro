  <Footer />

  <style>
    /* Page-specific styles for index page */

    /* Fix YouTube iframe responsiveness */
    #ytplayer1 {
      width: 100%;
      max-width: 800px;
      margin-top: 25px;
    }

    #ytplayer1 iframe {
      width: 100%;
      height: 400px;
      max-width: 700px;
    }

    /* Improve features layout */
    .features {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
      justify-items: center;
    }

    .feature {
      width: 100%;
      max-width: 300px;
      text-align: center;
    }

    /* Make the YouTube feature span full width when it's alone on a row */
    #ytplayer1 {
      grid-column: 1 / -1;
      max-width: 100%;
      width: 100%;
    }

    /* Gallery container styling */
    .gallery-container {
      max-width: 1000px;
      margin: 0 auto;
    }

    /* Executive section improvements */
    .executive-grid {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
    }

    .executive-card img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      object-position: center;
    }

    /* About section improvements */
    .about-section {
      max-width: 1000px;
      margin: 0 auto;
      text-align: center;
      line-height: 1.7;
    }

    .about-section h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: var(--accent-color);
    }

    .about-section p {
      font-size: 1.1rem;
      opacity: 0.9;
      margin-bottom: 2rem;
    }

    /* Responsive improvements */
    @media screen and (max-width: 768px) {
      .features {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .feature {
        max-width: 100%;
      }

      /* Reset grid-column on mobile since everything is single column */
      #ytplayer1 {
        grid-column: auto;
      }

      #ytplayer1 iframe {
        height: 250px;
      }

      .executive-grid {
        grid-template-columns: 1fr;
      }

      .about-section h2 {
        font-size: 2rem;
      }
    }

    @media screen and (max-width: 480px) {
      .gallery-container {
        max-width: 100%;
        padding: 0 1rem;
      }

      #ytplayer1 iframe {
        height: 200px;
      }
    }
  </style>

  <script>
    function animateCounter(
      id: string,
      target: number,
      duration: number
    ): void {
      const el = document.getElementById(id);
      if (!el) return;
      let start = 0;
      const increment = target / (duration / 10);
      const counter = setInterval(() => {
        start += increment;
        if (start >= target) {
          el.textContent = target.toString();
          clearInterval(counter);
        } else {
          el.textContent = Math.floor(start).toString();
        }
      }, 10);
    }

    function scrollGallery(direction: number): void {
      const track = document.getElementById("gallery-track");
      if (!track) return;
      const scrollAmount = 370; // adjust width per image + gap (350px + 20px gap)
      track.scrollBy({
        left: direction * scrollAmount,
        behavior: "smooth",
      });
    }

    // Make scrollGallery available globally for onclick handlers
    (window as any).scrollGallery = scrollGallery;

    // Also add event listeners as backup
    document.addEventListener("DOMContentLoaded", function () {
      const leftBtn = document.querySelector(".scroll-btn.left");
      const rightBtn = document.querySelector(".scroll-btn.right");

      if (leftBtn) {
        leftBtn.addEventListener("click", () => scrollGallery(-1));
      }
      if (rightBtn) {
        rightBtn.addEventListener("click", () => scrollGallery(1));
      }
    });

    window.onload = () => {
      animateCounter("members", 52, 4000);
      animateCounter("performances", 18, 4000);
      animateCounter("audience", 1200, 4000);
    };
  </script>
</BaseLayout>
