---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import EventCard from "../components/EventCard.astro";
---

<BaseLayout title="Paizo | Events">
  <Header />

  <section class="events-hero" style="padding-top: 120px; text-align: center; background: #181818;">
    <h1
      style="color: var(--accent-color); font-size: 2.8rem; margin-bottom: .5rem;"
    >
      Past Events
    </h1>
    <p style="color: var(--text-color); max-width: 800px; margin: 0 auto;">
      <b>Discover past performances, workshops, and community events hosted by
      Paizo.</b>
    </p>
  </section>

  <section
    class="events-list"
    style="max-width: 1000px; margin: 2.5rem auto; padding: 0 1rem;"
  >
    <h2
      style="color: var(--accent-color); text-align: left; margin-bottom: 1rem; font-weight: bold;"
    >
      Past Events
    </h2>

    <div
      style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem;"
    >
      <EventCard
        title="First Gig at Parkview"
        date="Nov 16, 2024"
        location="Parkview Frisco"
        image="/images/performances/first_performance.png"
      />
      <EventCard
        title="Holiday Gig at Stonemere"
        date="Dec 23, 2025"
        location="Stonemere Rehabilitation Center"
        image="/images/performances/stonemere_holiday.png"
      />
      <EventCard
        title="Spring Gig at Parkview"
        date="Mar 15, 2025"
        location="Parkview Frisco"
        image="/images/performances/parkview.png"
      />
    </div>

    <div style="text-align: center; margin-top: 2rem;">
      <a
        href="/events/upcoming"
        style="background: var(--accent-color); color: #000; padding: .8rem 1.25rem; border-radius: 8px; text-decoration: none; font-weight: 700;"
        >See All Upcoming Events</a
      >
      <a
        href="/events/book"
        style="margin-left: 0.75rem; background: var(--accent-color); color: #000; padding: .8rem 1.25rem; border-radius: 8px; text-decoration: none; font-weight: 700;"
        >Book an Event</a>
    </div>
  </section>

  <Footer />
</BaseLayout>
