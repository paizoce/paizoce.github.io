---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BookingForm from "../../components/BookingForm.astro";
---

<BaseLayout title="Paizo | Book an Event">
  <Header />

  <section class="membership-header" style="background-color: var(--footer-bg); margin-top: 80px;">
    <h1 class="membership-title">Book Paizo for Your Event</h1>
    <p style="max-width: 700px; margin: .5rem auto 1.5rem; color: var(--text-color); font-weight: bold;">
      Fill out the booking form below and we'll get back to you with availability.
    </p>
  </section>
  <section style="max-width: 900px; margin: 0 auto; padding: 2rem 1rem 4rem 1rem; background: #181818; border-radius: 12px;">
    <BookingForm />
  </section>

  <Footer />
</BaseLayout>
