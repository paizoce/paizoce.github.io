---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BookingForm from "../../components/BookingForm.astro";
---

<BaseLayout title="Paizo | Book an Event">
  <Header />

  <section style="padding-top: 120px; max-width: 900px; margin: 0 auto;">
    <h1
      style="color: var(--accent-color); font-size: 2.4rem; text-align: center;"
    >
      Book Paizo for Your Event
    </h1>
    <p
      style="color: white; text-align: center; max-width: 700px; margin: .5rem auto 1.5rem;"
    >
      Fill out the booking form below and we'll get back to you with
      availability and pricing.
    </p>

    <BookingForm />
  </section>

  <Footer />
</BaseLayout>
