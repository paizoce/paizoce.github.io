---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import UpcomingEvent from "../../components/UpcomingEvent.astro";
---

<BaseLayout title="Paizo | Upcoming Events">
  <Header />

  <section style="padding-top: 120px; text-align: center; background: #141414;">
    <h1 style="color: var(--accent-color); font-size: 2.8rem; margin-bottom: .5rem;">
      Upcoming Events
    </h1>
    <p style="color: var(--text-color); max-width: 800px; margin: 0.5rem auto 2rem; font-weight: bold;">
      Join us at our upcoming performances and community events!
    </p>
  </section>

  <section>
    <h2>
      Upcoming Events will be Listed Here!
    </h2>
  </section>
  <Footer />
</BaseLayout>
