---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Paizo | Become a Tutor">
  <Header />
  
  <section class="membership-header" style="margin-top: 80px;">
    <h1 class="membership-title">Become a Tutor</h1>
    <p><b>Share Your Musical Knowledge!</b></p>
  </section>

  <section style="padding: 3rem 1rem; max-width: 900px; margin: auto; text-align: center;">
  <h2 style="color: var(--accent-color); font-size: 2.5rem; margin-bottom: 1rem; font-weight: bold;">Why Become a Tutor?</h2>
    <p style="font-size: 1.2rem; color: #fff; line-height: 1.6;">
      As a Paizo tutor, you'll have the opportunity to share your passion for music while helping others grow.
      Our tutoring program connects experienced musicians with students who are eager to learn and improve.
    </p>
    <p style="font-size: 1.2rem; color: #fff; line-height: 1.6; margin-top: 1rem;">
      Whether you're skilled in classical instruments, music theory, or contemporary styles, there's always
      someone who could benefit from your expertise.
    </p>

    <!-- Removed buttons as requested -->

    <section style="background-color: #1a1a1a; padding: 4rem 2rem; text-align: center;">
  <h2 style="color: var(--accent-color); font-size: 2.5rem; margin-bottom: 2rem; font-weight: bold;">Tutor Requirements</h2>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2rem; max-width: 1000px; margin: auto;">

        <div style="background-color: #222; border-radius: 10px; padding: 1.5rem; box-shadow: 0 0 10px rgba(0,0,0,0.08);">
          <h3 style="color: var(--accent-color); margin-bottom: 1rem; font-weight: bold;">Experience</h3>
          <p style="font-size: 1rem; color: #fff; line-height: 1.6;">
            At least 3 years of experience with your instrument or music theory knowledge
          </p>
        </div>

        <div style="background-color: #222; border-radius: 10px; padding: 1.5rem; box-shadow: 0 0 10px rgba(0,0,0,0.08);">
          <h3 style="color: var(--accent-color); margin-bottom: 1rem; font-weight: bold;">Commitment</h3>
          <p style="font-size: 1rem; color: #fff; line-height: 1.6;">
            Ability to commit to at least 2 hours per week for tutoring sessions
          </p>
        </div>

        <div style="background-color: #222; border-radius: 10px; padding: 1.5rem; box-shadow: 0 0 10px rgba(0,0,0,0.08);">
          <h3 style="color: var(--accent-color); margin-bottom: 1rem; font-weight: bold;">Patience</h3>
          <p style="font-size: 1rem; color: #fff; line-height: 1.6;">
            Patience and enthusiasm for teaching students of all skill levels
          </p>
        </div>

      </div>
    </section>

  </section>

  <form id="tutorForm" class="booking-form" style="margin: 2rem auto; max-width: 600px;">
  <h2 style="margin-bottom: 0.5rem; font-weight: bold;">Become a Tutor</h2>
    <p style="margin-bottom: 1.5rem;">Fill out the form below to apply to become a Paizo tutor.</p>
    <div class="grid-2">
      <div>
        <label for="bt-first">First Name</label>
        <input id="bt-first" name="firstName" type="text" placeholder="First name" required />
      </div>
      <div>
        <label for="bt-last">Last Name</label>
        <input id="bt-last" name="lastName" type="text" placeholder="Last name" required />
      </div>
      <div>
        <label for="bt-grade">Grade</label>
        <input id="bt-grade" name="grade" type="text" placeholder="e.g., 11th" />
      </div>
      <div>
        <label for="bt-school">School</label>
        <input id="bt-school" name="school" type="text" placeholder="School name" />
      </div>
      <div>
        <label for="bt-email">Email</label>
        <input id="bt-email" name="email" type="email" placeholder="you@example.com" required />
      </div>
      <div>
        <label for="bt-instrument">Instrument(s)</label>
        <input id="bt-instrument" name="instruments" type="text" placeholder="e.g., Violin, Piano" />
      </div>
    </div>
    <div class="full-width">
      <label for="bt-why">Why do you want to be a tutor?</label>
      <textarea id="bt-why" name="why" placeholder="Tell us why you want to be a tutor" required></textarea>
    </div>
    <div class="full-width">
      <label for="bt-notes">Additional Notes/Inquiries</label>
      <textarea id="bt-notes" name="notes" placeholder="Anything else you'd like us to know?"></textarea>
    </div>
    <div class="actions">
      <button type="submit" class="submit">Submit Tutor Application</button>
    </div>
    <style>
      .booking-form {
        background: var(--card-bg);
        padding: 1.25rem;
        border-radius: 12px;
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.03);
      }
      .grid-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
      }
      label {
        display: block;
        font-weight: 700;
        margin-bottom: 0.25rem;
      }
      input[type="text"],
      input[type="email"],
      input[type="date"],
      textarea {
        width: 100%;
        padding: 0.6rem;
        border-radius: 8px;
        border: none;
        background: #111;
        color: white;
      }
      .full-width {
        margin-top: 0.75rem;
      }
      .actions {
        text-align: right;
        margin-top: 0.75rem;
      }
      .submit {
        background: var(--accent-color);
        color: #000;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        border: none;
        font-weight: 700;
      }
      @media screen and (max-width: 600px) {
        .grid-2 {
          grid-template-columns: 1fr;
        }
        .actions {
          text-align: center;
        }
      }
    </style>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("tutorForm");
        function encode(text) {
          return encodeURIComponent(text || "");
        }
        form.addEventListener("submit", function (e) {
          e.preventDefault();
          const first = document.getElementById("bt-first").value.trim();
          const last = document.getElementById("bt-last").value.trim();
          const grade = document.getElementById("bt-grade").value.trim();
          const school = document.getElementById("bt-school").value.trim();
          const email = document.getElementById("bt-email").value.trim();
          const instruments = document.getElementById("bt-instrument").value.trim();
          const why = document.getElementById("bt-why").value.trim();
          const notes = document.getElementById("bt-notes").value.trim();
          if (!first || !last || !email || !why) {
            alert("Please fill out all required fields.");
            return;
          }
          const to = "paizochamberensemble@gmail.com";
          const subject = encode(`Tutor application: ${first} ${last}`);
          let body = "";
          body += `First Name: ${first}%0D%0A`;
          body += `Last Name: ${last}%0D%0A`;
          body += `Grade: ${grade}%0D%0A`;
          body += `School: ${school}%0D%0A`;
          body += `Email: ${email}%0D%0A`;
          if (instruments) body += `Instrument(s): ${instruments}%0D%0A`;
          body += `%0D%0A`;
          body += `Why do you want to be a tutor?%0D%0A${encode(why)}%0D%0A`;
          if (notes) body += `%0D%0AAdditional Notes/Inquiries:%0D%0A${encode(notes)}%0D%0A`;
          const mailto = `mailto:${to}?subject=${subject}&body=${body}`;
          window.location.href = mailto;
        });
      });
    </script>
  </form>
  <Footer />
</BaseLayout>
