---
export interface Props {
  title: string;
  date: string;
  location?: string;
  image?: string;
}
const {
  title,
  date,
  location = "",
  image = "/images/performances/first_performance.png",
} = Astro.props;
---

<article
  class="event-card"
  style="background: var(--card-bg); border-radius: 10px; overflow: hidden;"
>
  <img
    src={image}
    alt={title}
    style="width:100%; height:180px; object-fit:cover; display:block;"
  />
  <div style="padding: 1rem; color: white;">
    <h3 style="margin:0 0 0.5rem 0;">{title}</h3>
    <p style="margin:0 0 .5rem 0; color: rgba(255,255,255,0.8);">
      {date} â€” {location}
    </p>
  </div>
</article>
