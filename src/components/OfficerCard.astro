---
export interface Props {
  name: string;
  role: string;
  img?: string;
  bio?: string;
}

const {
  name,
  role,
  img = "/images/officers/placeholder.png",
  bio = "",
} = Astro.props;
---

<div class="officer-card">
  <img class="officer-img" src={img} alt={name} />
  <h3 class="officer-name">{name}</h3>
  <p class="officer-role">{role}</p>
  {bio ? <p class="officer-bio">{bio}</p> : null}
</div>

<style>
  .officer-card {
    background-color: var(--card-bg);
    border-radius: 10px;
    padding: 1.25rem;
    text-align: center;
    color: white;
    transition:
      transform 0.25s ease,
      box-shadow 0.25s ease;
  }

  .officer-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.5);
  }

  .officer-img {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 1rem;
    border: 3px solid var(--accent-color);
  }
  .officer-name {
    margin: 0 0 0.25rem 0;
    color: white;
  }
  .officer-role {
    margin: 0 0 0.75rem 0;
    color: var(--accent-color);
    font-weight: 700;
  }
  .officer-bio {
    color: #ccc;
    font-size: 0.95rem;
  }
</style>
