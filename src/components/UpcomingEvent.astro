---
export interface Props {
  title: string;
  description: string;
  date: string;
  time?: string;
  location?: string;
  image?: string;
}

const {
  title,
  description,
  date,
  time = "",
  location = "",
  image = "/images/performances/placeholder.png",
} = Astro.props;
---

<article class="upcoming-event">
  <div class="event-image">
    <img src={image} alt={title} />
  </div>

  <div class="event-content">
    <h3 class="event-title">{title}</h3>
    <p class="event-desc">{description}</p>

    <div class="event-meta">
      <div class="event-datetime">{date} {time ? `Â· ${time}` : ""}</div>
      {location ? <div class="event-location">{location}</div> : null}
    </div>
  </div>
</article>

<style>
  .upcoming-event {
    display: grid;
    grid-template-columns: 220px 1fr;
    gap: 1.25rem;
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    padding: 0.5rem;
    align-items: start;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.45);
    border: 1px solid rgba(255, 255, 255, 0.03);
    transition:
      transform 0.18s ease,
      box-shadow 0.18s ease;
  }

  .upcoming-event:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.55);
  }

  .event-image img {
    width: 100%;
    height: 100%;
    min-height: 160px;
    object-fit: cover;
    display: block;
    border-radius: 8px;
  }

  .event-content {
    padding: 0.75rem 1rem;
    color: white;
  }

  .event-title {
    margin: 0 0 0.5rem 0;
    color: var(--accent-color);
    font-size: 1.05rem;
  }

  .event-desc {
    margin: 0 0 0.75rem 0;
    color: rgba(255, 255, 255, 0.92);
    line-height: 1.5;
    font-size: 0.98rem;
  }

  .event-meta {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    color: rgba(255, 255, 255, 0.78);
    font-weight: 600;
    font-size: 0.95rem;
  }

  .event-location {
    color: rgba(255, 255, 255, 0.68);
    font-weight: 500;
    font-size: 0.9rem;
  }

  @media screen and (max-width: 720px) {
    .upcoming-event {
      grid-template-columns: 1fr;
      padding: 0.5rem;
    }

    .event-image img {
      min-height: 220px;
      border-radius: 8px;
    }

    .event-content {
      padding: 0.9rem 0.25rem 1rem 0.25rem;
    }
  }
</style>
